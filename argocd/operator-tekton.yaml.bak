apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: operator-tekton-argocd
  namespace: openshift-gitops
spec:
  destination:
    namespace: openshift-operators
    server: https://kubernetes.default.svc
  project: default
  source:
    path: operator-tekton
    repoURL: https://github.com/grigorijk/gka-argo-cd-test-env
    targetRevision: master
  syncPolicy:
    automated:
      prune: true
      selfHeal: false
    syncOptions:
    - CreateNamespace=false